@model StrangerRecord.Models.Entity.Identification 


<div class="card">
    <div class="card-header">
        <a class="btn btn-outline-primary btn-sm float-end" href="@Url.Action("Edit", "Record", new { area="Identification", id = Model.id })">Modifier</a>

        <h5 class="card-title">Identification</h5>
    </div>
    <div class="card-body">
        <table class="table table-sm table-striped">
            <tbody>
                <tr>
                    <td>Nom complet <br /> (Nom-postnom-prénom)</td>
                    <td class="fw-bold">  @Model.nom @Model.postenom @Model.prenom</td>
                </tr>
                <tr>
                    <td>Genre</td>
                    <td class="fw-bold">  @Model.genre</td>
                </tr>
                <tr>
                    <td>Date de naissance</td>
                    <td class="fw-bold">  @Model.date_naissance.ToShortDateString()</td>
                </tr>
                <tr>
                    <td>Proféssion</td>
                    <td class="fw-bold">  @Model.profession</td>
                </tr>
                <tr>
                    <td>Pays/Ville d'origine</td>
                    <td class="fw-bold">  @Model.pays_origine/@Model.ville_pays_origine</td>
                </tr>
                <tr>
                    <td>Date  d'entrée en RDC</td>
                    <td class="fw-bold">  @Model.date_entree_rdc.ToShortDateString()</td>
                </tr>
                <tr>
                    <td>Contact Mail</td>
                    <td class="fw-bold">  @Model.contact_mail</td>
                </tr>
                <tr>
                    <td>Contact Telephone</td>
                    <td class="fw-bold">  @Model.contact_telephone</td>
                </tr>
            </tbody>
        </table> 
    </div>
</div>



